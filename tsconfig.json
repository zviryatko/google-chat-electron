{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "outDir": "./lib",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*"
  ]
}
